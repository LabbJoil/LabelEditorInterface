<UserControl x:Class="LabelEditorInterface.CustomControls.TileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:local="clr-namespace:LabelEditorInterface.CustomControls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:TileControl}"
             MouseMove="TileControl_MouseMove">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <svgc:SvgViewbox Source="{Binding SvgPath}"
                         Grid.Row="0"
                         Margin="10"
                         Stretch="Uniform"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Text}"
                   Grid.Row="1"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
