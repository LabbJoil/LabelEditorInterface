<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:LabelEditorInterface.CustomControls">
    <Style TargetType="{x:Type cc:DraggableItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type cc:DraggableItem}">
                    <Grid>
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter/>
                        </Border>

                        <Thumb x:Name="ResizeThumbRB"
                               Width="10" Height="10"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Background="Blue"
                               Visibility="Collapsed"
                               Cursor="SizeNWSE"/>

                        <Thumb x:Name="ResizeThumbRT"
                               Width="10" Height="10"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Background="Blue"
                               Visibility="Collapsed"
                               Cursor="SizeNESW"/>

                        <Thumb x:Name="ResizeThumbLB"
                               Width="10" Height="10"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Background="Blue"
                               Visibility="Collapsed"
                               Cursor="SizeNESW"/>

                        <Thumb x:Name="ResizeThumbLT"
                               Width="10" Height="10"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Background="Blue"
                               Visibility="Collapsed"
                               Cursor="SizeNWSE"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>