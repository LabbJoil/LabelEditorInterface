<Window x:Class="LabelEditorInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customControls ="clr-namespace:LabelEditorInterface.CustomControls"
        xmlns:local="clr-namespace:LabelEditorInterface"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Background="#FF1D132E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <customControls:RoundControl x:Name="MenuButton"
                                     ImageLeaveButton ="/Assets/MenuButtons/MenuLeaveButton.png"
                                     ImageEnterButton ="/Assets/MenuButtons/MenuEnterButton.png"
                                     Grid.Column="1" Grid.Row="0"
                                     Width="50" Height="50"
                                     Grid.ZIndex="1"
                                     Click="InteractionMenu"/>

        <Canvas x:Name="MainCanvas"
                Background="Gray"
                Opacity="1"
                Grid.ColumnSpan="3" Grid.RowSpan="2" Grid.ZIndex="0"
                AllowDrop="True"
                MouseDown="MainCanvas_MouseDown"
                Drop="MainCanvas_Drop"/>

        <Slider x:Name="MenuSlider"
                Grid.Column="0" Grid.Row="0"
                Grid.ColumnSpan="3" Grid.RowSpan="2" 
                HorizontalAlignment="Left"
                Width="0" Margin="0,0,40,0"
                Panel.ZIndex="2" IsDirectionReversed="True">
            <Slider.Template>
                <ControlTemplate TargetType="Slider">
                    <Border Background="#FF4E40CF" BorderBrush="Gray" BorderThickness="1">
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <customControls:RoundControl x:Name="MenuButton"
                                                         ImageLeaveButton ="/Assets/MenuButtons/CloseLeaveButton.png" ImageEnterButton ="/Assets/MenuButtons/CloseEnterButton.png"
                                                         Grid.ColumnSpan="2" Grid.Row="0"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Top"
                                                         Width="50" Height="50"
                                                         Margin="0,0,0,20"
                                                         Click="InteractionMenu"/>

                            <customControls:TileControl Text="Штрихкод"
                                                        Grid.Column="0" Grid.Row="1"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/Barcode.svg"
                                                        TileType="Barcode"/>
                            
                            <customControls:TileControl Text="Картинка"
                                                        Grid.Column="1" Grid.Row="1"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/Image.svg"
                                                        TileType="Image"/>

                            <customControls:TileControl Text="Эллипс"
                                                        Grid.Column="0" Grid.Row="2"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/Ellipse.svg"
                                                        TileType="Ellipse"/>

                            <customControls:TileControl Text="Линия"
                                                        Grid.Column="1" Grid.Row="2"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/Line.svg"
                                                        TileType="Line"/>

                            <customControls:TileControl Text="Прямоуголььник"
                                                        Grid.Column="0" Grid.Row="3"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/Rectangle.svg"
                                                        TileType="Rectangle"/>

                            <customControls:TileControl Text="Многострочный текст"
                                                        Grid.Column="1" Grid.Row="3"
                                                        Margin="10,10,10,10"
                                                        HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                                        SvgPath="/Assets/Elements/RichTextBox.svg"
                                                        TileType="RichTextBox"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Slider.Template>
        </Slider>
    </Grid>
</Window>
